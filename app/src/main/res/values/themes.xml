<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MicroBlogging" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MicroBlogging.splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="boldText">
        <item name="android:fontFamily">@font/bold</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/regular_text_color</item>
    </style>
    <style name="regularText">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/regular_text_color</item>
    </style>
    <style name="lightText">
        <item name="android:fontFamily">@font/light</item>
        <item name="fontFamily">@font/light</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/light_text_color</item>
    </style>

</resources>